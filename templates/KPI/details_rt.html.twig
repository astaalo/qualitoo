{% extends 'base.html.twig' %}

{% block content %}
<div class="onecolumn" >
	<div class="header"><span ><span class="ico  gray spreadsheet">
		</span>Détails risques</span>
		<div id="buttom_top">
			<ul class="uibutton-group">
				<li><a class="uibutton icon confirm answer" href="{{ path('rt', {carto:1}) }}" title="Risques transverses">Retour aux kpis</a></li>
            </ul>
        </div>
	</div>
	<div class="clear"></div>
	<table class="show_table">
		<tbody>
			<tr>
				<th style="width:140px;" >Menace:</th>
				<td style="padding-left: 70px;">{{ entity.libelle }}</td>
			</tr>
			<tr>
				<th style="width:140px;" >Occurence:</th>
				<td style="padding-left: 70px;">{{ occurence }}</td>
			</tr>
			<tr>
				<th style="width:140px;" >Cartographie:</th>
				<td style="padding-left: 70px;">{{ cartographie }}</td>
			</tr>
		</tbody>
	</table>
	<div class="tableName">
	<div class="onecolumn" style="width: 98%;margin: auto;margin-top: 21px;">
	<div class="header"><span ><span class="ico  gray ">
		</span>Risques</span>
		<div id="buttom_top">
			<ul class="uibutton-group">
				<li><a class="uibutton icon download" href="{{ path('export_pour_kpi') }}">Extraire</a></li>
            </ul>
        </div>
	</div>
	{% if carto <=2 %}
				<table id="tabM" class="display static data_table2" >
					<thead>
						<tr>
							<th><div class="th_wrapp">Direction</div></th>
							<th><div class="th_wrapp">Département</div></th>
							<th><div class="th_wrapp">Activité</div></th>
							<th><div class="th_wrapp">Criticité</div></th>
						</tr>
					</thead>
					<tbody>
					{% for risque in risques %}
						<tr>
							<td><div class="th_wrapp">{{ risque.structreOrSite.direction.code }}</div></td>
							<td><div class="th_wrapp">{{ risque.structreOrSite.code }}</div></td>
							<td><div class="th_wrapp">{{ risque.activite }}</div></td>
							<td><div class="th_wrapp">{{ risque.probabilite }} * {{ risque.gravite }} = {{ risque.probabilite * risque.gravite }} ou {{ risque.criticite|show_status }}</div></td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
	{% else %}
				<table id="tabE" class="display static data_table2" >
					<thead>
						<tr>
							<th><div class="th_wrapp">Site</div></th>
							<th><div class="th_wrapp">Activité</div></th>
							<th><div class="th_wrapp">Criticité</div></th>
						</tr>
					</thead>
					<tbody>
					{% for risque in risques %}
						<tr>
							<td><div class="th_wrapp">{{ risque.structreOrSite }}</div></td>
							<td><div class="th_wrapp">{{ risque.activite }}</div></td>
							<td><div class="th_wrapp">{{ risque.probabilite }} * {{ risque.gravite }} = {{ risque.probabilite * risque.gravite }} ou {{ risque.criticite|show_status }}</div></td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
	{% endif %}
			</div>
	</div>
</div>
<div class="clear"></div>
{% endblock %}