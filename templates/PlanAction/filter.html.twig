{% form_theme form 'OrangeMainBundle:Extra:simple_form_theme.html.twig' %}

<div class="contentForm">
	<form  novalidate="novalidate"  action="{{ path('filtrer_les_planactions') }}" method="POST">
		{{ form_row(form.cartographie) }}
		{{ form_row(form.menace) }}
		{{ form_row(form.statut) }}
		{{ form_row(form.porteur) }}
		<div class="section">
			<label>Structure, projet ou site</label>
			<div style="width: 30%;display: inline-block;margin-left: 0">
				{{ form_widget(form.structure) }}
			</div>
			<div style="width: 15%;display: inline-block;margin-left: 0">
				{{ form_widget(form.projet) }}
			</div>
			<div style="width: 15%;display: inline-block;margin-left: 0">
				{{ form_widget(form.site) }}
			</div>
		</div>
		<div class="section">
			<label>Debut :</label>
			<div style="width: 30%;display: inline-block;margin-left: 0">
				{{ form_widget(form.dateDebutFrom, {attr: {'class': 'datepicker ', 'placeholder': 'Entre'}}) }}
			</div>
			<div style="width: 30%;display: inline-block;margin-left: 0">
				{{ form_widget(form.dateDebutTo, {attr: {'class': 'datepicker ', 'placeholder':'Et'}}) }}
			</div>
		</div>
		<div class="section">
			<label>Ech√©ance :</label>
			<div style="width: 30%;display: inline-block;margin-left: 0">
				{{ form_widget(form.dateFinFrom, {attr: {'class': 'datepicker ', 'placeholder': 'Entre'}}) }}
			</div>
			<div style="width: 30%;display: inline-block;margin-left: 0">
				{{ form_widget(form.dateFinTo, {attr: {'class': 'datepicker ', 'placeholder':'Et'}}) }}
			</div>
		</div>
		<div class="section last footer">
			<div>
				<button class="uibutton loading submitTargetLink on_load_page" data-target="#filter_content" name="#main_content" data-target="#myModal" call="afterSuccesFiltrer" argument-call="#planactionTable">Filtrer</button>
				<input type="reset" name="#main_content" class="uibutton special on_load_page" value="Effacer" >
			</div>
		</div>
	</form>
</div>
{% block add_script_js %}
<script type="text/javascript">
	$(function() {
	{% set functionOnComplete %}
				todoOnCompleteWithError();
			{% endset %}
			{{ formTargetSubmit('#filter_content', '', functionOnComplete) }}
			formTargetSubmit();	
	});
</script>
{% endblock %}