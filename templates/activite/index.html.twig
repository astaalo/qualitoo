{% extends 'configuration/index.html.twig' %}

{% block menu_config %}
	{% include 'configuration/configuration.html.twig' %}
{% endblock %}

{% block header_config %}
<div class="header">
	<span>
		<span class="ico color spreadsheet"></span>Liste des activités
	</span>
	<div id="buttom_top">
		<ul class="uibutton-group">
			<li class="tip"><a href="#myModal" class="uibutton icon filter actionLink" data-toggle="modal" data-target="#myModal" modal-url="{{ path('filtrer_les_activites') }}" original-title="Filter les processus">Filtre</a></li>
			<li class="tip"><a class="uibutton icon add" href="{{ path('nouvelle_activite') }}" original-title="Ajouter une activité">Nouvelle activité</a></li>
        </ul>
    </div>
</div>
{% endblock %}

{% block content_config %}
<div class="contentDatatable">
	<div class="tableName">
	<table class="display" id="activiteTable">
		<thead>
			<tr>
				<th><div class="th_wrapp">Code</div></th>
				<th><div class="th_wrapp">Libellé</div></th>
				<th><div class="th_wrapp">Processus</div></th>
				<th width="50px"><div class="th_wrapp">Actions</div></th>
			</tr>
		</thead>
		<tbody>
		 	<tr class="odd gradeX">
		 		<td colspan="4">Chargement des données en cours ...</td>
			</tr>
		</tbody>
	</table>
	</div>
</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ block_render('form_div_layout.html.twig', 'datatable_options', {has_buttons: false, with_tag: 1 }) }}
	{% include 'extra/datatable.html.twig' with {idTable: 'activiteTable', url: path('liste_des_activites'), nosorting: {0:2, 1:3} } %}
{% endblock %}
