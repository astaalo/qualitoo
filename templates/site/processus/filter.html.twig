{% form_theme form 'extra/simple_form_theme.html.twig' %}

<div class="header">
	<img src="{{ asset('assets/bundles/orangemain/images/icon/color_18/zoom.png') }}" alt="add">
	<span>Filtre des processus</span>
	<div class="close_me"><a data-dismiss="modal"><img src="{{ asset('assets/bundles/orangemain/images/icon/closeme.png') }}"> </a></div>
</div>
<div class="content">
	<form  novalidate="novalidate"  action="{{ path('filtrer_les_processus') }}" method="POST">
		{{ form_row(form.typeProcessus, {attr: {class: 'full'}} ) }}
		{{ form_row(form.structure) }}
		<div class="section last">
			<div>
				<button class="uibutton loading submitLink" data-target="#myModal" call="afterSuccesFiltrer" argument-call="#processusTable">Filtrer</button>
				<input type="reset" data-dismiss="modal" class="uibutton special" value="Effacer" >
			</div>
		</div>
	</form>
</div>
<script>
	$('#{{ form.typeProcessus.vars.id }}').prepend("<option value>Choisir un type ...</option>");
	$('#{{ form.typeProcessus.vars.id }}').val(''); // if you want it to be automatically selected

	$('#{{ form.structure.vars.id }}').prepend("<option value>Choisir une structure ...</option>");
	$('#{{ form.structure.vars.id }}').val(''); // if you want it to be automatically selected
</script>
