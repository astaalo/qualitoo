{% extends 'configuration/index.html.twig' %}
{% form_theme form 'extra/simple_form_theme.html.twig' %}

{% block menu_config %}
	{% include 'configuration/hierarchie.html.twig' with {position: 1} %}
{% endblock %}

{% block header_config %}
<div class="header">
	<span>
		<span class="ico gray add"></span>
		Ajout Société
	</span>
	<div id="buttom_top">
		<ul class="uibutton-group">
			<li><a class="uibutton icon answer" href="{{ path('les_societes') }}">Liste des sociétés</a></li>
        </ul>
    </div>
</div>
{% endblock %}

{% block content_config %}
<div class="contentForm">
	<form  novalidate="novalidate"  action="{{ path('creer_societe') }}" method="POST" {{ form_enctype(form) }}>
		{{ form_row(form.libelle) }}
		{{ form_row(form.famille) }}
		{{ form_row(form.profilRisque) }}
		{{ form_row(form.file) }}
		{{ form_row(form._token) }}
		<div class="section last">
			<div>
				<button class="uibutton loading">Enregistrer</button>
				<input type="reset"  class="uibutton special" value="Effacer" >
			</div>
		</div>
	</form>
</div>
{% endblock %}
