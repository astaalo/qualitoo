{% extends 'configuration/index.html.twig' %}

{% block menu_config %}{% include 'configuration/configuration.html.twig' %}{% endblock %}

{% block header_config %}
<div class="header">
	<span>
		<span class="ico color spreadsheet"></span>Détails de la {{ entity.libelle }}
	</span>
	<div id="buttom_top">
		<ul class="uibutton-group">
			<li><a class="uibutton icon confirm answer" href="{{ path('les_structures') }}" title="les structures">Retour à la liste</a></li>
			<li><a class="uibutton icon edit" href="{{ path('edition_structure', {'id': entity.id}) }}">Edition d'une Structure</a></li>
        </ul>
    </div>
</div>
{% endblock %}

{% block content_config %}
	<div class="content">
		<div id="uploadTab">
			<table class="show_table">
				<tbody>
					{% if entity.parent is not empty  %}
						<tr>
							<th style="width:300px;" >Processus parent:</th>
							<td style="padding-left: 100px;"><a href="{{ path('details_structure', {'id': entity.parent.id}) }}">{{ entity.parent }}</a></td>
						</tr>
					{% endif %}
					<tr>
						<th style="width:115px;" >Nom de la Structure:</th>
						<td style="padding-left: 100px;">{{ entity.libelle }}</td>
					</tr>
					<tr>
						<th style="width:115px;" >Parent:</th>
						<td style="padding-left: 100px;">{{ entity.parent.libelle }}</td>
					</tr>
					<tr>
						<th style="width:115px;" >Type Structure:</th>
						<td style="padding-left: 100px;">{{ entity.typeStructure.libelle }}</td>
					</tr>
				</tbody>	
			</table>
		</div><!--/END TAB/-->
		<div class="clear"/></div>
	</div>
</div>
{% endblock %}
