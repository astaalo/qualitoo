{% extends 'configuration/index.html.twig' %}
{% form_theme form 'extra/simple_form_theme.html.twig' %}

{% block menu_config %}{% include 'configuration/configuration.html.twig' %}{% endblock %}

{% block header_config %}
<div class="header">
	<span>
		<span class="ico color add"></span>Ajout d'un utilisateur
	</span>
	<div id="buttom_top">
		<ul class="uibutton-group">
			<li><a class="uibutton icon answer" href="{{ path('les_utilisateurs') }}">Liste des utilisateurs</a></li>
        </ul>
    </div>
</div>
{% endblock %}

{% block content_config %}
<div class="contentForm">
	<form  novalidate="novalidate"  action="{{ (id is empty) ? path('creer_utilisateur') : path('ajouter_utilisateur', {id: id}) }}" method="POST">
        {{ form_row(form.matricule, {attr: {class: 'full'}})  }}
        {{ form_row(form.prenom, {attr: {class: 'full'}}) }}
		{{ form_row(form.nom, {attr: {class: 'full'}}) }}
		{{ form_row(form.username, {attr: {class: 'full'}}) }}
		{{ form_row(form.email, {attr: {class: 'full'}})  }}
        {{ form_row(form.telephone, {attr: {class: 'full'}}) }}
        {{ form_row(form.profils, {attr: {class: 'full'}}) }}
        {{ form_row(form.structure, {attr: (id is empty) ? {} : {disabled: 'true'}} ) }}
		{{ form_row(form._token) }}
		<div class="section last footer">
			<div>
				<button class="uibutton loading">Enregistrer</button>
				<input type="reset"  class="uibutton special" value="Annuler" >
			</div>
		</div>
	</form>
</div>


	
{% endblock %}
